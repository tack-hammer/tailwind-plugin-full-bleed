{
  "name": "@tkh/tailwind-plugin-full-bleed",
  "description": "Tailwindcss plugin to break elements out of width constraints and take up the full viewport",
  "keywords": [
    "full-bleed",
    "full width",
    "plugin",
    "tailwind css",
    "tailwind",
    "tailwindcss-plugin",
    "tailwindcss"
  ],
  "version": "1.4.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tack-hammer/tailwind-plugin-full-bleed.git"
  },
  "main": "full-bleed.js",
  "scripts": {
    "lint": "eslint .",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "eslint-cli": "^1.1.1",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "lint-staged": "^9.2.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  }
}
